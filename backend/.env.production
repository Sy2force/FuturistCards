# Production Environment Variables for Render Deployment
NODE_ENV=production
PORT=10000

# MongoDB - À configurer dans Render Dashboard
MONGO_URI=your_mongodb_atlas_connection_string

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_for_production
JWT_EXPIRES_IN=30d

# CORS Origins - À ajuster selon votre frontend
CORS_ORIGIN=https://your-frontend-domain.com,https://cardpro-frontend.onrender.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
