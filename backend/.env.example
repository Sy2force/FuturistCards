# Backend Environment Variables
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:3010
CLIENT_URL_PROD=https://futuristcards.vercel.app

# Database
MONGO_URI=mongodb://127.0.0.1:27017/futuristcards
MONGO_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/futuristcards

# JWT - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here

# Security
CORS_ORIGIN=http://localhost:3010
CORS_ORIGIN_PROD=https://futuristcards.vercel.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
