# MongoDB Configuration
# Pour local: mongodb://localhost:27017/fCardPro
# Pour MongoDB Atlas: mongodb+srv://<user>:<password>@cluster.mongodb.net/cardpro?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/fCardPro

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d

# Server Configuration
NODE_ENV=development
PORT=10000

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3010,http://localhost:3000,http://localhost:3001

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
