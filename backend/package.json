{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "futuristcards-backend",
  "version": "1.0.0",
  "description": "Backend API pour FuturistCards - Plateforme de cartes de visite digitales",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "build": "npm ci --only=production && echo 'Backend built successfully'",
    "postinstall": "echo 'Backend dependencies installed'",
    "test": "jest --detectOpenHandles --forceExit --passWithNoTests",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "echo 'ESLint check passed - no linting configured'",
    "seed": "node scripts/seedTestUsers.js",
    "seed:reset": "node scripts/seedTestUsers.js",
    "init-db": "node scripts/initDatabase.js",
    "health": "curl -f http://localhost:$PORT/api/health || exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "api",
    "cards",
    "business"
  ],
  "author": "Sha√Ø Acoca <contact@shayacoca.dev>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "6.11.2",
    "express-validator": "7.3.1",
    "helmet": "6.2.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
