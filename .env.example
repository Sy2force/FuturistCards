# ===========================================
# FUTURISTCARDS - VARIABLES D'ENVIRONNEMENT
# ===========================================

# FRONTEND CONFIGURATION
VITE_API_BASE_URL=http://localhost:5001/api
VITE_API_URL=http://localhost:5001/api
VITE_API_BASE_URL_PROD=https://futuristcards-api.onrender.com/api
VITE_APP_NAME=FuturistCards
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern digital business card platform for professionals

# AUTHENTICATION
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_JWT_EXPIRES_IN=7d

# FEATURES
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_MAX_FILE_SIZE=5242880
VITE_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# SOCIAL MEDIA INTEGRATION
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# DEVELOPMENT
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# SERVER
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:3010

# DATABASE
MONGO_URI=mongodb://127.0.0.1:27017/futuristcards
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/futuristcards?retryWrites=true&w=majority

# SECURITY
JWT_SECRET=futuristcards_super_secret_key_2024_change_in_production
JWT_REFRESH_SECRET=futuristcards_refresh_secret_key_2024_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# EMAIL SERVICE (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# CLOUDINARY (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3010,https://futuristcards.vercel.app
