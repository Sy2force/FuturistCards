{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://futuristcards.onrender.com/api",
    "VITE_API_BASE_URL": "https://futuristcards.onrender.com/api",
    "NODE_ENV": "production"
  }
}
