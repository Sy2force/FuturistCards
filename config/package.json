{
  "name": "futuristcards",
  "version": "1.0.0",
  "description": "Modern business card platform with glassmorphism design",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "cd frontend && npm run test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "setup": "npm run install:all && cp CONFIGURATION/.env.example backend/.env && cp CONFIGURATION/.env.example frontend/.env"
  },
  "keywords": [
    "business-cards",
    "react",
    "nodejs",
    "mongodb",
    "glassmorphism",
    "full-stack"
  ],
  "author": "FuturistCards Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/futuristcards.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/futuristcards/issues"
  },
  "homepage": "https://github.com/yourusername/futuristcards#readme"
}
